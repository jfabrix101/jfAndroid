<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="TextAppearance">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textColorHighlight">#FFFF9200</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
		<item name="android:textColorLink">#5C5CFF</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="TextAppearance.Large">
		<item name="android:textSize">22sp</item>
	</style>
	<style name="TextAppearance.Medium">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="TextAppearance.Small">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>
	<style name="TextAppearance.Separator">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="QuickActions" />
	<style name="QuickActions.Widget" />
	
	
	<style name="QuickActions.Widget.QuickAction" />
	<style name="QuickActions.Widget.QuickAction.Bar" />
	<style name="QuickActions.Widget.QuickAction.Grid">
		<item name="android:padding">7dp</item>
		<item name="android:listSelector">@drawable/quickactions_grid_selector</item>
		<item name="android:background">@drawable/quickactions_grid_bg</item>
		<item name="android:gravity">center</item>
		<item name="android:fadingEdgeLength">0dp</item>
		<item name="android:stretchMode">columnWidth</item>
		<item name="android:verticalSpacing">7dp</item>
		<item name="android:numColumns">3</item>
	</style>
	
	<style name="QuickActions.Widget.QuickAction.Item">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#333</item>
	</style>
	<style name="QuickActions.Widget.QuickAction.Bar.Item" parent="@style/QuickActions.Widget.QuickAction.Item">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:minWidth">80dp</item>
		<item name="android:background">@drawable/quickactions_item</item>
	</style>
	<style name="QuickActions.Widget.QuickAction.Grid.Item" parent="@style/QuickActions.Widget.QuickAction.Item">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">65dp</item>
	</style>
	   
   <!-- PopDownMenu -->
	<style name="QuickActions.Animation" />
	
	<style name="QuickActions.Animation.PopDown" />
	<style name="QuickActions.Animation.PopDown.Left">
		<item name="@android:windowEnterAnimation">@anim/quickactions_grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/quickactions_shrink_from_bottomright_to_topleft</item>
	</style>
	<style name="QuickActions.Animation.PopDown.Right">
		<item name="@android:windowEnterAnimation">@anim/quickactions_grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/quickactions_shrink_from_bottomleft_to_topright</item>
	</style>
	<style name="QuickActions.Animation.PopDown.Center">
		<item name="@android:windowEnterAnimation">@anim/quickactions_grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/quickactions_shrink_from_bottom</item>
	</style>
	
	<style name="QuickActions.Animation.PopUp" />
	<style name="QuickActions.Animation.PopUp.Left">
		<item name="@android:windowEnterAnimation">@anim/quickactions_grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/quickactions_shrink_from_topright_to_bottomleft</item>
	</style>
	<style name="QuickActions.Animation.PopUp.Right">
		<item name="@android:windowEnterAnimation">@anim/quickactions_grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/quickactions_shrink_from_topleft_to_bottomright</item>
	</style>
	<style name="QuickActions.Animation.PopUp.Center">
		<item name="@android:windowEnterAnimation">@anim/quickactions_grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/quickactions_shrink_from_top</item>
	</style>

</resources>