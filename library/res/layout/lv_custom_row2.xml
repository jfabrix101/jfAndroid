<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:orientation="horizontal">
	
	<ImageView android:id="@+id/xxx_icon" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
		android:src="@drawable/jfabrix101_icon" 
		android:paddingLeft="5dip" 
		android:paddingRight="10dip" />
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
	    android:orientation="vertical" android:layout_gravity="center_vertical">
	
		<TextView
		    android:id="@+id/xxx_row1"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:ellipsize="end"
		    android:gravity="left"
		    android:text="@string/jfabrix101_library"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textStyle="bold" />
		
		<TextView
		    android:id="@+id/xxx_row2"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:ellipsize="end"
		    android:gravity="left"
		    android:text="@string/jfabrix101_library_version"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textStyle="italic" />

	</LinearLayout>
</LinearLayout>
