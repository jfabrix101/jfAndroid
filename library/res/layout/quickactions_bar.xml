<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<FrameLayout
		android:id="@+id/gdi_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/gdi_arrow_up"
		android:layout_marginTop="-1px"
		android:background="@drawable/quickactions_top_frame" />

	<HorizontalScrollView
		android:id="@+id/gdi_scroll"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/gdi_header"
		android:background="@drawable/quickactions_background"
		android:fadingEdgeLength="0dp"
		android:scrollbars="none">

		<LinearLayout
			android:id="@+id/gdi_rack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:padding="4dip"
			android:orientation="horizontal">

			<View
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:background="@drawable/quickactions_grip_left" />

			<LinearLayout
				android:id="@+id/gdi_quick_action_items"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<View
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:background="@drawable/quickactions_grip_right" />

		</LinearLayout>

	</HorizontalScrollView>

	<FrameLayout
		android:id="@+id/gdi_footer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/gdi_scroll"
		android:background="@drawable/quickactions_bottom_frame" />

	<ImageView
		android:id="@+id/gdi_arrow_up"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/quickactions_arrow_up" />

	<ImageView
		android:id="@+id/gdi_arrow_down"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="-1px"
		android:layout_below="@id/gdi_footer"
		android:src="@drawable/quickactions_arrow_down" />

</RelativeLayout>